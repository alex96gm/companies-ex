<div class="card style-card">
  <div class="row">
    <img class="card-img-top col-lg-3 col-md-6 col-sm-12" src="https://archive.icann.org/meetings/icann56/cdn.schd.ws/common/img/avatar-empty.png" alt="Card image cap">
    <div class="card-body  col-lg-9 col-md-6 col-sm-12">
      <h5 class="card-title">{{this.name}}</h5>
      <p class="card-text">{{this.code}}</p>
      <p class="card-text">{{this.money}}</p>
      <p class="card-text">{{this.description}}</p>
      <a href="/companies/{{this.id}}" class="text-primary">Details</a>
      <a href="/companies/edit/{{this.id}}" class="text-warning">Edit</a>
      <form action="/companies/{{ this.id }}/delete" method="post">
        <button type="submit" class="btn btn-sm btn-outline-danger" data-confirm="Are you sure?">Delete</button>
      </form>
    </div>
  </div>
</div>